{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://canonical.github.io/charm-relation-interfaces/database/schemas/requirer.json",
    "title": "`database` requirer schema",
    "description": "The `database` root schema comprises the entire requirer databag for this interface.",
    "type": "object",
    "default": {},
    "required": [
        "database"
    ],
    "additionalProperties": true,
    "properties": {
        "database": {
            "title": "Database Name",
            "description": "The database name requested by the requirer",
            "type": "string",
            "default": "",
            "examples": [
                "myapp"
            ]
        },
        "extra-user-roles": {
            "title": "Extra-user-roles",
            "description": "Any extra user roles requested by the requirer",
            "type": "array",
            "default": ["default"],
            "items": {
                "title": "Database User Role",
                "description": "A database user role",
                "type": "string",
                "examples": [
                    "default",
                    "admin"
                ]
            },
            "examples": [
                [
                    "default",
                    "admin"
                ]
            ]
        }
    },
    "examples": [{
        "database": "myapp",
        "extra-user-roles": [
            "default",
            "admin"
        ]
    }]
}

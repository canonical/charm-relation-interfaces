{
  "title": "ProviderSchema",
  "description": "Provider schema for Tracing.",
  "type": "object",
  "properties": {
    "unit": {
      "$ref": "#/definitions/BaseModel"
    },
    "app": {
      "$ref": "#/definitions/TracingProviderData"
    }
  },
  "required": [
    "app"
  ],
  "definitions": {
    "BaseModel": {
      "title": "BaseModel",
      "type": "object",
      "properties": {}
    },
    "Receiver": {
      "title": "Receiver",
      "description": "Specification of an active receiver.",
      "type": "object",
      "properties": {
        "port": {
          "title": "Port",
          "description": "Port at which the receiver is listening.",
          "examples": [
            42,
            9098
          ],
          "type": "string"
        },
        "protocol": {
          "title": "Protocol",
          "description": "Receiver protocol name. What protocols are supported (and what they are called) may differ per provider.",
          "examples": [
            "otlp_grpc",
            "otlp_http",
            "tempo_http",
            "jaeger_thrift_compact"
          ],
          "type": "string"
        }
      },
      "required": [
        "port",
        "protocol"
      ]
    },
    "TracingProviderData": {
      "title": "TracingProviderData",
      "type": "object",
      "properties": {
        "host": {
          "title": "Host",
          "description": "Hostname of the tracing server.",
          "examples": [
            "example.com"
          ],
          "type": "string"
        },
        "receivers": {
          "title": "Receivers",
          "description": "List of the receivers that this server has enabled, and their ports.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Receiver"
          }
        }
      },
      "required": [
        "host",
        "receivers"
      ]
    }
  }
}
{
   "$schema":"https://json-schema.org/draft/2019-09/schema",
   "$id":"https://canonical.github.io/charm-relation-interfaces/interfaces/karapace_client/schemas/provider.json",
   "title":"`karapace_client` provider schema",
   "description":"The `karapace_client` root schema comprises the entire provider databag for this interface.",
   "type":"object",
   "default":{
      
   },
   "required":[
      "endpoints",
      "username", 
      "password",
      "tls"
   ],
   "additionalProperties":true,
   "properties":{
      "endpoints":{
         "title":"Karapace server endpoints",
         "description":"A comma-separated list of host:port for each Karapace server",
         "type":"string",
         "default":"",
         "examples":[
            "karapace-0.karapace-endpoints.model.svc.cluster.local:8082",
            "10.141.78.155:8082,10.141.78.62:8082"
         ]
      },
      "username":{
         "title":"Karapace username",
         "description":"Username for connecting to the Karapace service",
         "type":"string",
         "default":"",
         "examples":[
            "karapace_client_user",
            "relation-14"
         ]
      },
      "password":{
         "title":"Karapace password", 
         "description":"Password for connecting to the Karapace service",
         "type":"string",
         "default":"",
         "examples":[
            "secret-password",
            "alphanum-32byte-random"
         ]
      },
      "tls":{
         "title":"TLS configuration",
         "description":"TLS configuration for the connection",
         "type":"string",
         "default":"disabled",
         "enum":[
            "enabled",
            "disabled"
         ],
         "examples":[
            "enabled",
            "disabled"
         ]
      }
   },
   "examples":[
      {
         "endpoints":"karapace-0.karapace-endpoints.model.svc.cluster.local:8082",
         "username":"karapace_client_user",
         "password":"secret-password",
         "tls":"disabled"
      }
   ]
}

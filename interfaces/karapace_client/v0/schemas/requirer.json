{
   "$schema":"https://json-schema.org/draft/2019-09/schema",
   "$id":"https://canonical.github.io/charm-relation-interfaces/interfaces/karapace_client/schemas/requirer.json",
   "title":"`karapace_client` requirer schema",
   "description":"The `karapace_client` root schema comprises the entire requirer databag for this interface.",
   "type":"object",
   "default":{
      
   },
   "required":[
      "subject"
   ],
   "additionalProperties":true,
   "properties":{
      "subject":{
         "title":"Karapace subject name",
         "description":"The Karapace subject name to be created/accessed",
         "type":"string",
         "default":"",
         "examples":[
            "test-subject",
            "my-application-schema"
         ]
      },
      "extra_user_roles":{
         "title":"Application client roles",
         "description":"Additional roles for the user - can be admin or user",
         "type":"string",
         "default":"user",
         "enum":[
            "user",
            "admin"
         ],
         "examples":[
            "user",
            "admin"
         ]
      }
   },
   "examples":[
      {
         "subject":"test-subject",
         "extra_user_roles":"admin"
      },
      {
         "subject":"my-application-schema",
         "extra_user_roles":"user"
      }
   ]
}
